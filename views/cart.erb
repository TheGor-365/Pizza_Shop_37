<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Pizza Shop</title>
  </head>

  <body>
    <h2>Your cart</h2>

    <div id="cart">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Qty</th>
          </tr>
        </thead>

        <tbody>
          <% tota_price = 0 %>
          <% tota_qty = 0 %>
          <% @items.each do |item| %>

          <tr>
            <td><% item[0].title %></td>
            <td><% item[0].price %></td>
            <td><% item[1] %></td>
          </tr>

          <% tota_price += item[0].price * item[1].to_i %>
          <% tota_price += item[1].to_i %>
          <% end %>

          <tr>
            <td>Total</td>
            <td><% tota_price %> rub</td>
            <td><% tota_qty %></td>
          </tr>
        </tbody>
      </table>

      <form action="/place_order" method="post" role="form">

        <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

        <div class="form-group">
          <label>Your name:</label>
          <input type="text" name="order[name]" placeholder="Input your name">
        </div>

        <div class="form-group">
          <label>Your phone:</label>
          <input type="text" name="order[phone]" placeholder="Input your phone">
        </div>

        <div class="form-group">
          <label>Your delivery address:</label>
          <textarea name="order[address]" placeholder="Input your address"></textarea>
        </div>

        <button type="submit" class="btn btn-success btn-lg">Place this order</button>
        <button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>
      </form>
    </div>

  </body>
</html>
