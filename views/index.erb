<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Pizza Shop</title>
  </head>
  <body>
    <h1>Welcome to Pizza Shop</h1>

    <div class="row">

      <% @products.each do |p| %>
        <div class="col-md-3">

          <div>
            <%= p.title %>
          </div>

          <div>
            <img src="<%= p.path_to_image %>" />
          </div>

          <div>
            <%= p.description %>
          </div>

          <div>
            Price: <%= p.price %> rub
          </div>

          <div>
            Size: <%= p.size %> sm
          </div>

          <div>
            <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
          </div>

        </div>
      <% end %>

    </div>

    <br>
    <br>

    <button onclick="something()" class="btn btn-primary" type="button" name="button">Click me!</button>

  </body>
</html>
